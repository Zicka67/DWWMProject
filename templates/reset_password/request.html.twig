{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

{% block bandeau %}
    <div class="bandeau-info"></div>
{% endblock %}

    <div class="container-mt">
        <div class="container-mt-p">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h1 class="margin-tb">Réinitialisez votre mot de passe</h1>
          
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }} 
                <div class="margin-tb">
                    <small>
                        Entrez votre adresse mail et nous vous enverrons un
                        lien pour réinitialiser votre mot de passe.
                    </small>
                </div class="margin-tb">
             
                <button class="margin-tb">Reçevoir un mail de réinitialisation</button>
                
                {{ form_end(requestForm) }}
        </div>            
    </div>

{% endblock %}
