{% extends 'base.html.twig' %}

{% block title %}Hello {{ app.user.pseudo }}{% endblock %}

{% block body_class %}page-color{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block bandeau %}
        <div class="bandeau-info"></div>
    {% endblock %}
   
    <div class="container-mt">
    
        <div class="container-mt-p">

            <h1 class="margin-tb change-profil">Modifier le profil :</h1>
               
                <p class="margin-tb change-profil">Changer l'email</p>

                {{ form_start(changeEmailForm) }}
                           
                {{ form_row(changeEmailForm.email, {
                    'label': 'Nouvel Email : ',
                    'attr': {'class': 'form-control'}
                    }) }}
                           
                    <button type="submit" class="custom-button margin-tb button-change-profil" onclick="return confirm('Êtes-vous sûr de vouloir modifier votre email ?')">Modifier l'email</button>
                    {{ form_end(changeEmailForm) }}

                    {# cacher le button et faire un onclick pour ajouter une classe et pour cacher ou afficher le modal
                    faire un faux button qui lui va déclencher le vrai button  #}
    
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('script/script.js') }}"></script>
{% endblock %}